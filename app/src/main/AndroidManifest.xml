<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.matt.a339project">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">
        <activity
            android:name=".Activities.MainActivity"
            android:label="Movie Store"
            android:theme="@style/Theme.AppCompat.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.BookActivity"
            android:label="@string/title_activity_book" />
        <activity
            android:name=".Activities.MovieActivity"
            android:label="@string/title_activity_movie" />
        <activity
            android:name=".Activities.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".Activities.RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".Activities.CDActivity"
            android:label="@string/title_activity_cd" />
        <activity android:name=".Activities.StatementActivity" />
        <activity android:name=".Activities.childrenMovieActivity" />
        <activity android:name=".Activities.newReleaseMovieActivity" />
        <activity android:name=".Activities.regularMovieActivity"></activity>
    </application>

</manifest>