<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.matt.a339project.Activities.StatementActivity"
    tools:showIn="@layout/activity_statement"
    android:theme="@style/Theme.AppCompat.Light">

    <Button
        android:text="Check Out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkoutBtn"
        android:layout_gravity="bottom"
        android:layout_weight="2"
        android:textAlignment="center"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:id="@+id/customerName"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textAlignment="center"
                android:paddingBottom="10px"
                android:layout_marginBottom="10dp"
                android:textAllCaps="true" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Age:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textAge"
                android:layout_gravity="center"
                android:fontFamily="casual"
                android:layout_weight="1"
                android:textAlignment="center" />

            <TextView
                android:text="Age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/customerAge"
                android:textStyle="normal|bold"
                android:fontFamily="casual"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Rentals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/RentalsLabel"
                android:fontFamily="casual"
                android:textAlignment="center"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/rentalTitleLabel"
                android:textAlignment="center" />

            <TextView
                android:text="Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/rentalCostLabel"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView android:paddingTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rentalTitlesList"/>

            <ListView android:paddingTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rentalCostsList"/>
        </TableRow>



    </TableLayout>

    <Button
        android:text="Clear List"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clearBtn"
        android:layout_weight="2"
        android:textAlignment="center"
        android:background="@color/colorPrimary"
        android:layout_above="@+id/checkoutBtn"
        android:layout_alignParentStart="true" />

</RelativeLayout>
