<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.matt.a339project.Activities.StatementActivity"
    tools:showIn="@layout/activity_statement"
    android:theme="@style/Theme.AppCompat.Light">

    <Button
        android:text="Check Out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkoutBtn"
        android:layout_gravity="bottom"
        android:layout_weight="2"
        android:textAlignment="center"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:id="@+id/customerName"
                android:fontFamily="casual"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Age:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textAge"
                android:layout_gravity="center"
                android:fontFamily="casual"
                android:layout_weight="1"
                android:textAlignment="center" />

            <TextView
                android:text="Age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/customerAge"
                android:textStyle="normal|bold"
                android:fontFamily="casual"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Movie Rentals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/movieRentalText"
                android:fontFamily="casual"
                android:textAlignment="center"
                android:layout_weight="1" />

            <TextView
                android:text="Movie Purchases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/MoviePurchases"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Movie Rental Summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_1"
                android:layout_weight="1"
                android:id="@+id/movieRentalSummary"
                android:textAlignment="center" />

            <TextView
                android:text="Movie Purchase Summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_1"
                android:layout_weight="1"
                android:id="@+id/moviePurchaseSummary"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="CD Rentals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/CDRentals"
                android:fontFamily="casual"
                android:layout_weight="1"
                android:textAlignment="center" />

            <TextView
                android:text="CD Purchases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/CDPurchases"
                android:fontFamily="casual"
                android:layout_weight="1"
                android:textAlignment="center" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="CD Rental Summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_1"
                android:layout_weight="1"
                android:id="@+id/CDRentalSummary"
                android:textAlignment="center" />

            <TextView
                android:text="CD Purchase Summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_1"
                android:layout_weight="1"
                android:id="@+id/CDPurchaseSummary"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Book Rentals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bookRentals"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textAlignment="center" />

            <TextView
                android:text="Book Purchases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bookPurchases"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textAlignment="center" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:text="Book Rental Summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_1"
                android:layout_weight="1"
                android:id="@+id/bookRentalSummary"
                android:textAlignment="center" />

            <TextView
                android:text="Book Purchase Summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_1"
                android:layout_weight="1"
                android:id="@+id/bookPurchaseSummary"
                android:textAlignment="center" />

        </TableRow>

    </TableLayout>

</RelativeLayout>
